.status-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  padding: 10px;

  position: fixed;
  top: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 999;  /* 以便将其置于其他元素之上，确保其显示在页面顶部。 */
}

.fullscreen-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.fullscreen-image image {
  width: 100%;
  height: 100%;
  max-width: 100vw;
  max-height: 100vh;
  object-fit: contain;
}