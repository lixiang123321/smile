.container {
  display: flex;
  flex-direction: column;
  align-items: normal;
  justify-content:space-around;
  background-color: #fff;
}

.smile {
  width: 100vw;
  margin-bottom: 1vw;
  margin-top: 0px;
}

.text-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 1vw;
}

.text-content {
  font-size: 16px;
  line-height: 24px;
  color: #666;
  text-align: left;
  text-indent: 2em;
}

.button {
  width: 200px;
  height: 40px;
  background-color: #fff;
  border: 1px solid #666;
  color: #666;
  border-radius: 20px;
  margin-top: 5vw;
}
